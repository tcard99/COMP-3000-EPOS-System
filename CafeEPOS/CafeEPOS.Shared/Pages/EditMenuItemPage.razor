@page "/editMenu/{passedId}"
@using CafeEPOS.Shared.Layout
@layout NoLayout
@inject NavigationManager navigation
@using Microsoft.Maui.Controls
@using CafeEPOS.Shared.Services
@using Microsoft.AspNetCore.Components.QuickGrid
@using Models
@using System.Linq

<PageTitle> Add Menu</PageTitle>

<link rel="stylesheet" href="_content/CafeEPOS.Shared/startingScreenStyles.css" />

<img src="_content/CafeEPOS.Shared/images/ImagePlaceholder.png" width="100" height="100" class="logo" alt="Logo" />
<h1 style="text-align:center; padding-top:50px; margin-bottom:175px;">EASY ORDER EPOS SYSTEM</h1>


<div class="container-fluid1">
    <h2 style="text-align:center;">Add Menu</h2

    <select class="CatDropDown" @bind="catId">
        <option value="">Choose Category</option>
        @foreach (var cat in Categorys)
        {
            <option value="@cat.Id">@cat.Name</option>
        }
    </select>

    <br />

    <input type="text" placeholder="Enter category name" style="text-align:center; width:50%; border-radius:50px;" @bind="newMenuName" />

    <br />

    <input type="number"  style="text-align:center; border-radius:50px;" placeholder="Enter Price" @bind="newMenuPrice" />


    <div class="container-fluid1">
        <div class="LoginBackContainer">
            <button class="backButton" @onclick="back">Back</button>
            <button class="loginButton" @onclick="update">Update</button>
        </div>
    </div>

</div>

<script src="_content/CafeEPOS.Shared/js/site.js"></script>

@code
{
    [Inject] IJSRuntime JS { get; set; }

    [Inject] IFormFactor FF { get; set; }

    [Inject] LocalStorageService _localStorage { get; set; }

    //Store found parent categorys
    public List<CategoryModel> Categorys { get; set; } = new List<CategoryModel>();
    public List<MenuModel> MenuItems { get; set; } = new List<MenuModel>();

    //Selected parent id
    public int catId { get; set; }

    //Inputted cat name
    public string newMenuName { get; set; }
    public decimal newMenuPrice { get; set; }

    public string token { get; set; }

    public CategoryService catService = new CategoryService();
    public MenuService menuServ = new MenuService();


    [Parameter] public string passedId { get; set; }

    //Get system account token
    public async Task<string> getToken()
    {
        return await _localStorage.GetValue("okten");
    }

    //Method to go back to previous page
    public void back()
    {
        navigation.NavigateTo("/menu");
    }

    //Method to add a new category
    public async void update()
    {
        //Check to see if a name has been entered
        if (newMenuName == null || newMenuName == "")
        {
            if (FF.GetFormFactor().StartsWith("Web"))
            {
                await JS.InvokeVoidAsync("showAlert", "Please enter a name");
            }
            else
            {
                await Application.Current.MainPage.DisplayAlert("Alert", "Please enter a name", "OK");
            }
        }
        else
        {
            if (catId == 0)
            {
                if (FF.GetFormFactor().StartsWith("Web"))
                {
                    await JS.InvokeVoidAsync("showAlert", "Please select a category");
                }
                else
                {
                    await Application.Current.MainPage.DisplayAlert("Alert", "Please select a category", "OK");
                }
            }
            if (newMenuPrice == null)
            {
                if (FF.GetFormFactor().StartsWith("Web"))
                {
                    await JS.InvokeVoidAsync("showAlert", "Please enter a price");
                }
                else
                {
                    await Application.Current.MainPage.DisplayAlert("Alert", "Please enter a price", "OK");
                }
            }
            else
            {
                //Call new menu service
                var updateItem = await menuServ.UpdateMenuItem(token, int.Parse(passedId), newMenuName, catId, newMenuPrice);

                if (updateItem == true)
                {
                    navigation.NavigateTo("/menu");
                }
                else
                {
                    if (FF.GetFormFactor().StartsWith("Web"))
                {
                    await JS.InvokeVoidAsync("showAlert", "Failed to update");
                }
                else
                {
                    await Application.Current.MainPage.DisplayAlert("Alert", "Failed to update", "OK");
                }
                }
            }
        }
    }

    //Method to get all parent categories on page load
    protected async override Task OnInitializedAsync()
    {
        token = await getToken();
        Categorys = (await catService.GetAllCategoiesCall (token)).ToList();
        MenuItems = (await menuServ.GetSingleMenuItem(token, int.Parse(passedId))).ToList();

        newMenuName = MenuItems.FirstOrDefault().Name;
        newMenuPrice = MenuItems.FirstOrDefault().price;
        catId = MenuItems.FirstOrDefault().categoryId;


    }
}
